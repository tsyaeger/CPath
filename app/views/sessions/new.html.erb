<style>

.log-label {
	width: 350px;
}

</style>






<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>


  <%=label_tag "username" %>
  <%= text_field_tag :username, "", class: "form-control log-label" %><br>
  <%=label_tag "password" %>
  <%= password_field_tag :password, "", class: "form-control log-label", required: true %><br>
  <%= submit_tag "Sign In", class: "btn btn-primary" %>

<% end %>

