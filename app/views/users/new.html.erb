<style>

.log-label {
	width: 350px;
}

</style>





<%= form_for @user do |f| %>

	<%= f.label :username %>
	<%= f.text_field :username, class: "form-control log-label", required: true %><br>

	<%= f.label :password_digest %>
	<%= f.password_field :password_digest, class: "form-control log-label", required: true %><br>

	<%= f.label :email %>
	<%= f.email_field :email, class: "form-control log-label", required: true %><br>

	<%= f.submit "Create User", class: "btn btn-primary" %>
	
<% end %>

